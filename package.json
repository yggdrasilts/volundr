{
  "name": "@yggdrasilts/volundr",
  "version": "0.1.9",
  "author": "YggdrasilTS Team ðŸŒ³",
  "main": "dist/index.js",
  "contributors": [
    "David Lopez <davidlopez.david@gmail.com>"
  ],
  "license": "MIT",
  "description": "A set of utilities to do the developer live easy.",
  "keywords": [
    "typescript",
    "utilities",
    "javascript"
  ],
  "bugs": {
    "url": "https://github.com/yggdrasilts/volundr/issues"
  },
  "homepage": "https://github.com/yggdrasilts/volundr",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yggdrasilts/volundr"
  },
  "scripts": {
    "build": "run-s lint test build:cmd",
    "build:cmd": "webpack --config ./webpack.config.js",
    "build:prod": "run-s clean lint test build:prod:cmd",
    "build:prod:cmd": "tsc -p tsconfig.prod.json",
    "clean": "rimraf dist",
    "clean:all": "rimraf node_modules package-lock.json dist",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "prebuild": "rimraf dist",
    "prepublish": "run-s build:prod",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "lodash": "^4.17.15",
    "typescript-char": "0.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@commitlint/prompt-cli": "^8.3.5",
    "@types/jest": "^25.1.3",
    "@types/lodash": "^4.14.149",
    "@types/node": "^13.7.5",
    "commitizen": "^4.0.3",
    "commitlint": "^8.3.5",
    "cz-conventional-changelog": "^3.1.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.2.1",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.0.0",
    "typescript": "^3.8.2",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11"
  },
  "engines": {
    "node": ">= 12.3.0",
    "npm": ">= 6.9.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  },
  "files": [
    "dist",
    "LICENSE.md"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        0,
        "always",
        120
      ]
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  }
}
